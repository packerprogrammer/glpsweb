<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="shconfig">
		<field name="id"
			id="id"
			type="text"
			default="0"
			readonly="true"
			class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" 
		/>

		<field name="name"
			type="text"
			class="inputbox"
			label="COM_SHCONFIG_FIELD_NAME_LABEL"
			description="COM_SHCONFIG_FIELD_NAME_DESC"
			size="30"
			required="true" 
		/>

		<field name="value"
			type="text"
			class="inputbox"
			label="COM_SHCONFIG_FIELD_VALUE_LABEL"
			description="COM_SHCONFIG_FIELD_VALUE_DESC"
			size="50"
			required="false" 
		/>
	</fieldset>
</form>
